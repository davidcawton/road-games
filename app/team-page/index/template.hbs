
<div class="index-pannel">
  <p class='index-pannel__graph'>{{model.team.cityDescription}}</p>
  <img class='index-pannel__img' src="{{model.team.citySkyline}}" alt="">

  <ul>
  {{#each model.activities as |activity|}}
  <li>{{activity.name}}</li>
  <li>{{activity.category}}</li>
  <li>{{activity.description}}</li>
  <li>{{activity.linkUrl}}</li>
  <li>{{activity.team.name}}</li>
  <li>{{activity.address}}</li>
  {{#if activity.airportCode}}
  <li>{{activity.airportCode}}</li>
  {{/if}}
  <li><img src="{{activity.pictureUrl}}" alt=""></li>
  <li><img src="{{activity.activityNameIcon}}" alt=""></li>

  {{/each}}
  </ul>

</div>


<style>
  .index-pannel {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 4em;
    margin-top: 2em;
    padding-top: 1em;
    justify-content: center;
    background-color: rgba(250, 250, 250, 0.5);
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  }

  .index-pannel__img {
    margin: 25px;
    width: 80%;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  }

  .index-pannel__graph {
    margin: 10px;
    width: 80%;
    text-align: justify;
    font-size: 1.5em;
    font-family: 'Black Ops One', sans-serif;
  }
</style>
