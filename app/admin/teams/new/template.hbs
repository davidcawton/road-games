  font-family: 'Black Ops One', sans-serif;
  display: flex;
  margin: auto;
  justify-content: center;
  margin-top: 50px;
  margin-bottom: 20px;
}

.new-team-form__btns {
  display: flex;
  justify-content:center;
  margin: auto;
}

