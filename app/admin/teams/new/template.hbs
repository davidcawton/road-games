<h1 class="new-team-form__title">Create A New Team</h1>

{{#simple-form class="new-team-form" onsubmit="addNewTeam" as |formValues|}}
  {{partial 'admin/teams/form'}}
<div class="new-team-form__btns">
    {{#link-to 'admin.teams'}}{{mdl-button class='new-form-btn' isFloating=true icon='arrow_back'}}{{/link-to}}
    {{mdl-button class='new-form-btn' isFloating=true icon='add'}}
</div>
{{/simple-form}}


<style>
